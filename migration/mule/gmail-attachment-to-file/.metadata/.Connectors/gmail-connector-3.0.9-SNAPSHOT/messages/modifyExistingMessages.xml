<template name="modifyExistingMessages" xmlns="http://ws.apache.org/ns/synapse">
    <parameter name="id" description="The ID of the message to modify"/>
    <parameter name="addLabelIds" description="A list of IDs of labels to add to this message"/>
    <parameter name="removeLabelIds"
               description="A list of IDs of labels to remove from this message"/>
    <sequence>
        <property name="uri.var.id" expression="$func:id"/>
        <property name="uri.var.addLabelIds" expression="$func:addLabelIds"/>
        <property name="uri.var.removeLabelIds" expression="$func:removeLabelIds"/>
        <payloadFactory media-type="json">
            <format>
                {
                "addLabelIds":$1,
                "removeLabelIds":$2
                }
            </format>
            <args>
                <arg expression="$ctx:uri.var.addLabelIds"/>
                <arg expression="$ctx:uri.var.removeLabelIds"/>
            </args>
        </payloadFactory>
        <filter source="boolean($ctx:uri.var.addLabelIds)" regex="false">
            <then>
                <script language="js"><![CDATA[
                    var payload = mc.getPayloadJSON();
                    delete payload["addLabelIds"];
                    mc.setPayloadJSON(payload);
                    ]]>
                </script>
            </then>
        </filter>
        <filter source="boolean($ctx:uri.var.removeLabelIds)" regex="false">
            <then>
                <script language="js"><![CDATA[
                    var payload = mc.getPayloadJSON();
                    delete payload["removeLabelIds"];
                    mc.setPayloadJSON(payload);
                    ]]>
                </script>
            </then>
        </filter>
        <property name="messageType" value="application/json"
                  scope="axis2"/>
        <header name="Content-Type" value="application/json" scope="transport"/>
        <call>
            <endpoint>
                <http method="post"
                      uri-template="{+uri.var.gmail.apiUrl}/{+uri.var.gmail.apiVersion}/users/{+uri.var.gmail.userId}/messages/{+uri.var.id}/modify"/>
            </endpoint>
        </call>
    </sequence>
</template>